<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maltauro.alunomobile">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlunoMobile">
        <activity
            android:name=".activities.DetalheTurmaActivity"
            android:exported="false"
            android:label="@string/detalhe_turma"
            android:windowSoftInputMode="adjustResize"  />
        <activity
            android:name=".activities.CadastroGradeCurricularActivity"
            android:exported="false"
            android:label="@string/cad_grade_curricular"
            android:windowSoftInputMode="adjustResize"  />
        <activity
            android:name=".activities.CadastroCursoActivity"
            android:exported="false"
            android:label="@string/cad_curso"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.CadastroTurmaActivity"
            android:exported="false"
            android:label="@string/cad_turma"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.CadastroDisciplinaActivity"
            android:exported="false"
            android:label="@string/cad_disciplina"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.CadastroProfessorActivity"
            android:exported="false"
            android:label="@string/cad_professor"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.CadastroAlunoActivity"
            android:exported="false"
            android:label="@string/cad_aluno"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AlunoMobile.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>