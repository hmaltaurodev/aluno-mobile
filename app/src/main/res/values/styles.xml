<resources>

    <style name="text_view_info" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="text_view_list_cabecalho" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="text_view_list_title" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="text_view_list_sub_title" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="text_view_list_info" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="text_input_layout" parent="@android:style/TextAppearance">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="layout_spinner" parent="@android:style/TextAppearance">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="button" parent="@android:style/TextAppearance">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="material_spinner" parent="@android:style/TextAppearance">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="ms_arrowColor">@color/gray_dark</item>
        <item name="ms_hintColor">@color/gray_dark</item>
        <item name="ms_baseColor">@color/gray_dark</item>
        <item name="ms_multiline">false</item>
    </style>

    <style name="fab_square" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

</resources>
